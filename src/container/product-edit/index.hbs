Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main>
  <h1 class="create__title">Редагування товару</h1>
  <section>
    <div class="form card">  
      <h2 class="form__title">Інформація про товар</h1>
      
      <form method="POST" action="/product-edit">
      {{#with data}}
        <div class="form__content">
          <div class="edit__top">
          <div class="form__field">
            <label for="name" class="form__label">Назва товару</label>
            <input type="name" name="name" class="form__input" value={{name}}>
          </div>
          <div class="form__field">
            <label for="price" class="form__label">Ціна</label>
            <input type="price" name="price" class="form__input" value={{price}}>
          </div>
          <div class="form__field">
            <label for="id" class="form__label">ID</label>
            <input type="id" name="id" class="form__input" value={{id}}>
          </div>
          </div>
          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару:</label>
            <input type="description" name="description" class="form__input" value={{description}}>
          </div>
          <div class="edit__bottom">
          <button method="POST" action="/product-edit" class="form__button blue">Зберегти оновлення</button>
          <button method="POST" action="/product-delete" class="form__button red"><a href="/product-delete?id={{id}}">Видалити товар</a></button>
          </div>
        </div>
        {{/with}}
      </form>      
    </div>
  </section>
</main>



