{{#with data.products}}
    {{#if isEmpty}}
        <mark>Пустий</mark>
        {{else}}            
        {{#each list}}                             
              <div class="card card__content">
                <h2 class="product__title">{{name}}</h2>
                <div class="product__text">{{description}}</div>
                <div class="product__id">ID: {{id}}</div>
                <div class="card__bottom">
                  <div class="product__price">{{price}}₴</div>
                  <button class="card__button"><a href="/product-edit?id={{id}}">Редагувати</a></button>
                </div>
              </div>            
        {{/each}} 
    {{/if}}
{{/with}}

